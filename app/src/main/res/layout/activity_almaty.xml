<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/almaty"
            android:layout_width="wrap_content"
            android:layout_height="900dp"
            android:src="@drawable/img_13"
            app:flow_firstVerticalBias="0"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

            <RelativeLayout
                android:id="@+id/grresto"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/img_14"
                android:minHeight="70dp"
                android:layout_margin="10dp"
                android:orientation="vertical">
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/grcenter"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/img_15"
                android:minHeight="70dp"
                android:layout_margin="10dp"
                android:orientation="vertical">
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/grhistpl"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/img_16"
                android:minHeight="70dp"
                android:layout_margin="10dp"
                android:orientation="vertical">
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/grplace"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/img_17"
                android:minHeight="70dp"
                android:layout_margin="10dp"
                android:orientation="vertical">
            </RelativeLayout>

    </LinearLayout>

</ScrollView>


